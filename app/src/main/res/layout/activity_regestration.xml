<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Regestration">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:id="@+id/rEmail"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="44dp"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:drawablePadding="8dp"
            android:background="@drawable/inputs"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textSize="26sp"
            android:drawablePadding="8dp"
            android:padding="16dp"
            android:inputType="textPassword"
            android:drawableStart="@drawable/ic_lock_outline_black_24dp"
            app:layout_constraintTop_toBottomOf="@+id/rEmail"
            android:id="@+id/rPassword"
            android:layout_margin="16dp"
            android:background="@drawable/inputs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/rPassword"
            android:text="Regestration"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"
            android:background="@drawable/button"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/regestration"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="already Have Account ?"
            android:id="@+id/haveAcc"
            app:layout_constraintTop_toBottomOf="@+id/regestration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            />

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>